<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="paperformat_employee_card" model="report.paperformat">
            <field name="name">Employee Badge Report</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">50</field>
            <field name="page_width">80</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>
        <record id="hr.hr_employee_print_badge" model="ir.actions.report">
            <field name="paperformat_id" ref="print_badge.paperformat_employee_card"/>
        </record>


    </data>
</odoo>