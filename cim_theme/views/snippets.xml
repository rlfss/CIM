<template id="place_into_bar" inherit_id="website.snippets" name="Place into bar">
  <xpath expr="//div[@id='snippet_structure']/div[contains(@class, 'o_panel_body')]/t" position="before">
      <t t-snippet="cim_theme.s_text_portal_info"
      t-thumbnail="/cim_theme/static/src/img/s_des.png"/>
      <t t-snippet="cim_theme.slider_portal_cim"
      t-thumbnail="/cim_theme/static/src/img/s_slider.png"/>
    </xpath>
</template>



