<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="job_group_view_form" model="ir.ui.view">
            <field name="name">job_group_view_form</field>
            <field name="model">job.group</field>
            <field name="arch" type="xml">
                <form string="Job Group">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="job_position_view_form_inherit" model="ir.ui.view">
            <field name="name">job_position_view_form_inherit</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='company_id']" position="before">
                    <field name="job_group_id" options="{'no_create_edit': True, 'no_quick_create': True,'no_open':True}"/>
                </xpath>

            </field>
        </record>

        <record id="job_group_view_tree" model="ir.ui.view">
            <field name="name">job_group_view_tree</field>
            <field name="model">job.group</field>
            <field name="arch" type="xml">
                <tree string="Job Group">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="job_group_action" model="ir.actions.act_window">
            <field name="name">Job Group</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">job.group</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="job_group_categ"
                  name="Job Group"
                  parent="hr.menu_human_resources_configuration"
                  action="job_group_action"
                  sequence="2"/>


    
    </data>
</odoo>