<!--                <xpath expr="//field[@name='name']" position="replace">-->
<!--                    <field name="name"/>-->
<!--                </xpath>-->

<!--            </field>-->
<!--        </record>-->

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="general_request_menu" name="General Request" parent="hr.menu_hr_root"
                  action="general_request_action"
                  sequence="5"/>
    </data>
</odoo>