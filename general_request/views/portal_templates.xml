<odoo>
    <template id="portal_my_home_general_request" name="Portal My Home : General Request"
              inherit_id="portal.portal_my_home"
              priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="general_request_count" t-call="portal.portal_docs_entry">
                <t t-set="title">General Request</t>
                <t t-set="url" t-value="'/my/request'"/>
                <t t-set="count" t-value="general_request_count"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_general_request" name="My General Request">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <ul class="list-inline d-flex align-items-center">
                            <li class="list-inline-item">
                                <a href="/my/home" class="fs-20">
                                    <i class="fa fa-home"></i>
                                </a>
                            </li>
                            <li class="list-inline-item fs-20">
                                <i class="fal fa-angle-right"></i>
                            </li>
                            <li class="list-inline-item">
                                <p class="m-0">
                                    General Request
                                </p>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="nav horizontal-tab  nav-pills" id="v-pills-tab" role="tablist"
                             aria-orientation="vertical">
                            <a class="nav-link active" id="my_requests-tab" data-toggle="pill" href="#my_requests"
                               role="tab"
                               aria-controls="my_requests" aria-selected="true">My Requests
                            </a>
                            <a class="nav-link" id="new_request-tab" data-toggle="pill" href="#new_request" role="tab"
                               aria-controls="new_request" aria-selected="false">New Request
                            </a>

                        </div>
                    </div>
                    <div class="col-lg-9 pl-lg-0">
                        <div class="tab-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="my_requests" role="tabpanel"
                                 aria-labelledby="my_requests-tab">
                                <div class="table-responsive my-table-container">

                                    <table class="table my-table">
                                        <thead>
                                            <tr>
                                                <th scope="col">Request Type</th>
                                                <th scope="col">Date</th>
                                                <th scope="col">Description</th>
                                                <th scope="col">Type</th>
                                                <th scope="col">Quantity</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="general_request" t-as="request">
                                                <tr>
                                                    <td>
                                                        <a t-attf-href="/my/request/#{request.id}#{request.get_portal_url()}"
                                                           t-att-title="request.request_type">
                                                            <t t-esc="request.request_type"/>
                                                        </a>
                                                    </td>
                                                    <!--                                                    <td>-->
                                                    <!--                                                        <span t-field="request.date"/>-->
                                                    <!--                                                    </td>-->
                                                    <td>
                                                        <span t-field="request.description"/>
                                                    </td>
                                                    <td>
                                                        <span t-field="request.type"/>
                                                    </td>
                                                    <td>
                                                        <span t-field="request.quantity"/>
                                                    </td>

                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>


                            <div class="tab-pane fade " id="new_request" role="tabpanel"
                                 aria-labelledby="new_request-tab">
                                <div class="my-card p-3">
                                    <form action="/request_form/general.request" method="post">
                                        <!--                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>-->
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Request Type:</label>
                                                    <select name="request_type" id="mySelect"
                                                            class="form-control link-style">
                                                        <option value="r_badge">Request Badge</option>
                                                        <option value="r_papers">Request Papers</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Description:</label>
                                                    <input type="text" class="form-control" name="description"/>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Type:</label>
                                                    <input type="text" class="form-control" name="type"/>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Quantity:</label>
                                                    <input type="integer" class="form-control" name="quantity"/>
                                                </div>
                                            </div>

                                            <div class="col-12 text-lg-right text-center">
                                                <input class="btn btn-primary px-4" type="Submit" value="send"/>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </t>
    </template>

    <template id="portal_general_request_page" name="Requests Portal Template" inherit_id="portal.portal_sidebar"
              primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-set="o_portal_fullwidth_alert" groups="sales_team.group_sale_salesman,account.group_account_invoice">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url"
                       t-value="'/web#model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (request._name, request.id, memo.env.ref('general_request.general_request_action').id)"/>
                </t>
            </t>


            <div class="row mt16 o_general_request_sidebar">
                <!-- Sidebar -->
                <div id="request_content" class="col-12 col-lg justify-content-end">
                    <div class="card pb-5">
                        <div id="introduction" class="pb-2 pt-3 card-header bg-white">
                            <h2 class="my-0" id="quote_header_2">
                                Request
                            </h2>
                        </div>
                        <div class="card-body">
                            <div id="request_communication">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <strong>Date :</strong>
                                            <strong t-esc="request.date"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <strong>Request Type :</strong>
                                            <strong t-esc="request.request_type"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <strong>Description :</strong>
                                            <strong t-esc="request.description"/>
                                        </div>
                                    </div>
                                </div>
                                <br/>
                                <br/>
                                <strong>Type :</strong>
                                <strong t-esc="request.type"/>
                                <br/>
                                <br/>
                                <strong>quantity :</strong>
                                <br/>
                                <p t-esc="request.quantity"/>
                                <br/>
                                <t t-call="portal.message_thread">
                                    <t t-set="object" t-value="request"/>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
