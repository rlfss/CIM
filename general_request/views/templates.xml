        <template id="tmp_request_form" name="General Request">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <ul class="list-inline d-flex align-items-center">
                                <li class="list-inline-item">
                                    <a href="/my/home" class="fs-20">
                                        <i class="fa fa-home"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item fs-20">
                                    <i class="fal fa-angle-right"></i>
                                </li>
                                <li class="list-inline-item">
                                    <p class="m-0">
                                        General Request
                                    </p>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="nav horizontal-tab  nav-pills" id="v-pills-tab" role="tablist"
                                 aria-orientation="vertical">
                                <a class="nav-link active" id="my_requests-tab" data-toggle="pill" href="#my_requests"
                                   role="tab"
                                   aria-controls="my_requests" aria-selected="false">My Requests
                                </a>
                                <a class="nav-link " id="new_request-tab" data-toggle="pill" href="#new_request" role="tab"
                                   aria-controls="new_requests" aria-selected="true">New Requests
                                </a>

                            </div>
                        </div>
                        <div class="col-lg-9 pl-lg-0">
                            <div class="tab-content" id="v-pills-tabContent">
                                <div class="tab-pane fade show active" id="my_requests" role="tabpanel"
                                     aria-labelledby="my_requests-tab">
                                    <div class="table-responsive my-table-container">

                                        <table class="table my-table">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Request Type</th>
                                                    <th scope="col">Description</th>
                                                    <th scope="col">Type</th>
                                                    <th scope="col">Quantity</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="request_type_id" t-as="request">
                                                    <tr>
                                                        <td>
                                                            <a t-attf-href="//my/request/#{request.id}}"
                                                               t-att-title="request.request_type">
                                                                <t t-esc="request.request_type"/>
                                                            </a>
                                                        </td>

                                                        <td>
                                                            <span t-field="request.description"/>
                                                        </td>
                                                        <td t-if="request.description">
                                                            <span t-field="request.description"/>
                                                        </td>
                                                        <td t-if="request.type">
                                                            <span t-field="request.typ"/>
                                                        </td>
                                                        <td t-if="request.quantity">
                                                            <span t-field="request.quantity"/>
                                                        </td>

                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane fade " id="new_request" role="tabpanel" aria-labelledby="new_request-tab">
                                <div class="my-card p-3">
                                    <form action="/my/request/submit">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Request Type:</label>
                                                <select name="request_type" id="mySelect"
                                                        class="form-control link-style">
                                                    <option value="r_badge">Request Badge</option>
                                                    <option value="r_papers">Request Papers</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Description:</label>
                                                <input type="text" class="form-control" name="description"/>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Type:</label>
                                                <input type="text" class="form-control" name="type"/>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Quantity:</label>
                                                <input type="integer" class="form-control" name="quantity"/>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Create</button>
                                    </form>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </t>
        </template>

        <template id="tmp_request_form_success" name="General Request Successfully Submitted">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="container">
                        <div class="col-md-12">
                            <div class="alert alert-success">
                                Request created successfully.
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>